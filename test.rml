<rml>
	<head>
		<title>Demo</title>
		<style>
			body
			{
			    font-family: roboto;
				width: 300dp;
				height: 225dp;

				margin: auto;
			}

			div#title_bar div#icon
			{
				display: none;
			}

			div#content
			{
	            background-color: green;
				text-align: left;
			}

			.test:hover
			{
			    transform: rotate(12deg);
			    transition: transform 1.6s;
			}

			.test
			{
			    transition: transform 1.6s;
			}

		</style>
	</head>
	<body>
		<p class="test"> Hello world, i hope. </p>
		<div data-model="context_data">
		    <p data-value="data"> Data {{data}} </p>
	    </div>
	</body>
</rml>